VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key


# Google OAuth (get from https://console.cloud.google.com/)
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Cloudflare R2 (S3-compatible) configuration
R2_S3_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_REGION=auto
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key
R2_BUCKET=your-bucket-name
R2_S3_FORCE_PATH_STYLE=true



# Email configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_USER=your_email@gmail.com
SMTP_APP_PASSWORD=your_gmail_app_password
EMAIL_FROM="ScreenSplit <your_email@gmail.com>"

# Database URLs (from Supabase)
DATABASE_URL="postgresql://postgres.xxx:password@aws-1-us-east-2.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"

# NextAuth.js v5 configuration (AUTH_* variables)
# Local development defaults (localhost). In production, set these to your live domain.
AUTH_SECRET="generate_with_openssl_rand_base64_32"
AUTH_URL="http://localhost:3000"
AUTH_TRUST_HOST=true

# Legacy NextAuth support (optional, but kept for compatibility)
NEXTAUTH_SECRET="generate_with_openssl_rand_base64_32"
NEXTAUTH_URL="http://localhost:3000"

# Public site URL for sharing links
# Use localhost in dev, and your deployed domain in production.
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Upstash Redis (for distributed rate limiting - get from https://console.upstash.com/)
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_upstash_redis_token"
# Set true to fail-fast if Redis is not available (recommended for production)
REDIS_REQUIRED=false
