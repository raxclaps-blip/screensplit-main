// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// User model for authentication and user management
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified Boolean   @default(false) @map("email_verified")
  image         String?
  password      String?   // For credentials login
  tokenVersion  Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts Account[]
  sessions Session[]
  projects Project[]
  designerPreference DesignerPreference?

  @@map("users")
}

model DesignerPreference {
  id               String   @id @default(cuid())
  userId           String   @unique @map("user_id")
  bottomRightText  String   @default("")
  bottomRightHistory Json?  @map("bottom_right_history")
  logoUrl          String?  @map("logo_url")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("designer_preferences")
}

// NextAuth.js models
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String?
  provider          String
  providerAccountId String  @map("provider_account_id")
  password          String? @db.Text
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  accessTokenExpiresAt DateTime? @map("access_token_expires_at")
  refreshTokenExpiresAt DateTime? @map("refresh_token_expires_at")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
  @@map("accounts")
}
 
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  ipAddress    String?  @map("ip_address")
  userAgent    String?  @map("user_agent")
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@map("sessions")
}
 
model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String
  expires    DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
 
  @@unique([identifier, token])
  @@map("verificationtokens")
}

// Email verification and password reset tokens
model EmailVerificationToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
  @@map("email_verification_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@unique([email, token])
  @@map("password_reset_tokens")
}

// Project model for before/after image combinations
model Project {
  id          String   @id @default(cuid())
  title       String?
  description String?
  
  // Image data
  beforeImage String   // URL or base64 data
  afterImage  String   // URL or base64 data
  finalImageUrl String? // cloud object key for final combined image
  
  // Layout and styling options
  layout      ProjectLayout @default(SIDE_BY_SIDE)
  beforeLabel String        @default("Before")
  afterLabel  String        @default("After")
  fontSize    Int           @default(48)
  textColor   String        @default("#ffffff")
  bgColor     String        @default("#000000")
  
  // Export settings
  exportFormat ExportFormat @default(PNG)
  exportQuality Int         @default(90) // 1-100 for JPEG quality
  
  // Share settings
  shareSlug   String?  @unique // Unique slug for public sharing
  shareMessage String? // Optional message to display with shared image
  isPrivate   Boolean  @default(false) // If true, requires password
  password    String?  // Bcrypt hashed password for private shares
  
  // Metadata
  isPublic    Boolean  @default(false)
  viewCount   Int      @default(0)
  userId      String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("projects")
  @@index([userId, createdAt(sort: Desc)])
}

// Analytics model for tracking usage
model Analytics {
  id        String      @id @default(cuid())
  event     EventType
  projectId String?
  userId    String?
  
  // Event metadata
  metadata  Json?
  userAgent String?
  ipAddress String?
  
  createdAt DateTime @default(now())

  @@map("analytics")
}

// Enums
enum ProjectLayout {
  SIDE_BY_SIDE
  TOP_TO_BOTTOM
}

enum ExportFormat {
  PNG
  JPEG
}

enum EventType {
  PROJECT_CREATED
  PROJECT_EXPORTED
  PROJECT_VIEWED
  USER_REGISTERED
  USER_LOGIN
}
